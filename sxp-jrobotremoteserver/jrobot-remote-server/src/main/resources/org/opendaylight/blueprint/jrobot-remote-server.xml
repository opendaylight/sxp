<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <!-- References -->
    <!-- Beans -->
    <bean id="robot-remote-server" class="org.opendaylight.sxp.jrobot.remoteserver.RemoteServerImpl" init-method="start"
          destroy-method="stop">
        <property name="port" value="8270"/>
        <property name="host" value="0.0.0.0"/>
    </bean>
    <!-- Services -->
    <service ref="robot-remote-server" interface="org.opendaylight.sxp.jrobot.remoteserver.RemoteServer"/>
</blueprint>

