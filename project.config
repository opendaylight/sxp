[access]
	inheritFrom = All-Projects
[project]
	description = Source-Group Tag eXchange Protocol (SXP)
[receive]
	requireChangeId = true
[access "refs/*"]
	owner = group ldap/gerrit-sxp-committers
	read = group Anonymous Users
	read = group Registered Users
	forgeAuthor = group ldap/gerrit-sxp-committers
[access "refs/for/refs/*"]
	push = group Registered Users
[access "refs/heads/*"]
	create = group Non-Interactive sxp users
	forgeAuthor = group Non-Interactive sxp users
	forgeCommitter = group Non-Interactive sxp users
	pushMerge = group Non-Interactive sxp users
	label-Code-Review = -2..+2 group ldap/gerrit-sxp-committers
	label-Code-Review = -1..+1 group Non-Interactive sxp users
	label-Code-Review = -1..+1 group Registered Users
	label-Verified = -1..+1 group Non-Interactive sxp users
	label-Verified = -1..+1 group ldap/gerrit-sxp-committers
	submit = group ldap/gerrit-sxp-committers
[access "refs/tags/*"]
	create = group ldap/gerrit-sxp-committers
	push = group Non-Interactive sxp users
	push = group ldap/gerrit-sxp-committers
	pushTag = group Non-Interactive sxp users
	pushTag = group ldap/gerrit-sxp-committers
