<node xmlns="urn:TBD:params:xml:ns:yang:network-topology">
    <node-id>1.1.5.1</node-id>
    <mapping-expanded xmlns="urn:opendaylight:sxp:node">0</mapping-expanded>
    <enabled xmlns="urn:opendaylight:sxp:node">true</enabled>
    <timers xmlns="urn:opendaylight:sxp:node">
        <retry-open-time>10</retry-open-time>
        <delete-hold-down-time>120</delete-hold-down-time>
        <hold-time-min-acceptable>120</hold-time-min-acceptable>
        <hold-time>90</hold-time>
        <hold-time-max>180</hold-time-max>
        <keep-alive-time>30</keep-alive-time>
        <reconciliation-time>120</reconciliation-time>
        <hold-time-min>90</hold-time-min>
    </timers>

    <sxp-domains xmlns="urn:opendaylight:sxp:node">
        <sxp-domain>
            <domain-name>global</domain-name>
            <connections xmlns="urn:opendaylight:sxp:node">
            </connections>
        </sxp-domain>
    </sxp-domains>

    <tcp-port xmlns="urn:opendaylight:sxp:node">64999</tcp-port>
    <description xmlns="urn:opendaylight:sxp:node">ODL SXP 1.1.5.1 Controller
    </description>

    <sxp-peer-groups xmlns="urn:opendaylight:sxp:node">
    </sxp-peer-groups>

    <security xmlns="urn:opendaylight:sxp:node">
        <password />
    </security>
    <version xmlns="urn:opendaylight:sxp:node">version4</version>
    <source-ip xmlns="urn:opendaylight:sxp:node">127.0.0.1</source-ip>
</node>
