--><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>sxp-parent</artifactId>
    <groupId>org.opendaylight.sxp</groupId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <!--
    Necessary TODO: Hookup your parent pom here, else you will not get necessary versions,
    maven repos etc.  If you run this archetype in a subdirectory of your project, it
    will pick the pom.xml from the parent directory as the parent pom, which may or may
    not be correct.
  -->
  <!--
    Necessary TODO: Replace the contents of src/main/resources/80-sxp.xml with
    the proper config subsystem contents for your module
  -->
  <artifactId>sxp-config</artifactId>
  <description>Configuration files for md-sal</description>
  <!-- Optional TODO: Uncomment version if you are not using a parent pom.xml
   <version>1.0-SNAPSHOT</version>
   -->
  <packaging>jar</packaging>
  <properties>
      <!-- Optional TODO: Rename your configfile to taste -->
      <!--configfiledevices>12-sxp-controller-devices.xml</configfiledevices>
      <configfilelocal>12-sxp-controller-local.xml</configfilelocal>
      <configfilenag>12-sxp-controller-nag.xml</configfilenag-->
  </properties>
  <build>
    <plugins>
        <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${project.build.directory}/classes/${configfile1local}</file>
                  <type>xml</type>
                  <classifier>${configfile1local}</classifier>
                </artifact>
                <artifact>
                  <file>${project.build.directory}/classes/${configfile1remote}</file>
                  <type>xml</type>
                  <classifier>${configfile1remote}</classifier>
                </artifact>
                <artifact>
                  <file>${project.build.directory}/classes/${configfile2local}</file>
                  <type>xml</type>
                  <classifier>${configfile2local}</classifier>
                </artifact>
                <artifact>
                  <file>${project.build.directory}/classes/${configfiledevices}</file>
                  <type>xml</type>
                  <classifier>${configfiledevices}</classifier>
                </artifact>
                <artifact>
                  <file>${project.build.directory}/classes/${configfilenag}</file>
                  <type>xml</type>
                  <classifier>${configfilenag}</classifier>
                </artifact>
                <!--
                  Optional TODO: Add additional config files
                    You may need to add more than one config file
                    if so, you just need to add additional <artifact> entries
                    here WITH DIFFERENT CLASSIFIERS
                    Example:
                    <artifact>
                      <file>${project.build.directory}/classes/<another-configfile></file>
                      <type>xml</type>
                      <classifier>config-<meaningful suffix to describe your other configfile></classifier>
                    </artifact>
                -->
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <scm>
      <connection>scm:git:ssh://git.opendaylight.org:29418/sxp.git</connection>
      <developerConnection>scm:git:ssh://git.opendaylight.org:29418/sxp.git</developerConnection>
      <tag>HEAD</tag>
      <url>https://git.opendaylight.org/gerrit/gitweb?p=sxp.git;a=summary</url>
   </scm>
</project>
